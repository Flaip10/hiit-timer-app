{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": false,
        "noFallthroughCasesInSwitch": true,

        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,

        "baseUrl": ".",
        "paths": {
            "@src/*": ["src/*"],
            "@screens/*": ["src/screens/*"],
            "@components/*": ["src/components/*"],
            "@state/*": ["src/state/*"],
            "@core/*": ["src/core/*"],
            "@hooks/*": ["src/hooks/*"]
        },
        "jsx": "react-native",
        "noEmit": true
    }
}
